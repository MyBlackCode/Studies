<Window x:Class="Student.WpfApp.AddGradeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Student.WpfApp"
        mc:Ignorable="d"
        Title="AddGradeWindow" Height="450" Width="400">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="40,44,0,0" TextWrapping="Wrap" Text="Subject name:" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxSubjectName" HorizontalAlignment="Left" Margin="119,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="40,64,0,0" TextWrapping="Wrap" Text="Date:" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxDate" HorizontalAlignment="Left" Margin="119,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="40,84,0,0" TextWrapping="Wrap" Text="Value:" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxValue" HorizontalAlignment="Left" Margin="119,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="AddGrade" Content="Add Grade" HorizontalAlignment="Left" Margin="40,116,0,0" VerticalAlignment="Top" Click="ButtonAddGrade_Click"/>
    </Grid>
</Window>
